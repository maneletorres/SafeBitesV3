<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RelativeLayoutStyle">

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:columnCount="6"
        android:orientation="horizontal"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/view3"
            android:layout_columnSpan="4"
            android:layout_gravity="fill" />

        <ImageView
            android:id="@+id/product_A_image"
            android:layout_width="@dimen/list_item_width"
            android:layout_height="@dimen/list_item_height"
            android:layout_columnSpan="1"
            android:contentDescription="Image description A"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/product_B_image"
            android:layout_width="@dimen/list_item_width"
            android:layout_height="@dimen/list_item_height"
            android:layout_columnSpan="1"
            android:contentDescription="Image description B"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/view4"
            android:layout_columnSpan="4"
            android:layout_gravity="fill" />

        <TextView
            android:id="@+id/product_A_name"
            android:layout_columnSpan="1"
            android:layout_gravity="center_horizontal"
            android:text="Product A"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_B_name"
            android:layout_columnSpan="1"
            android:layout_gravity="center_horizontal"
            android:text="Product B"
            android:textStyle="bold" />

    </GridLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/simplified_nutrients_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/grid_layout"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

</RelativeLayout>